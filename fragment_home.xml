<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aa"
    tools:context=".HomeFragment">



    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/two_sided_border"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"

        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <RelativeLayout
        android:id="@+id/wikid"
        android:layout_width="341dp"
        android:layout_height="322dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="86dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@drawable/two_sided_border" />


        <com.google.android.gms.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="291dp"
            android:layout_height="274dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            tools:context="com.example.mapmaker.MapsMarkerActivity"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTime"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/two_sided_border"

        android:ellipsize="start"
        android:ems="10"


        android:gravity="center_horizontal"
        android:hint="12/12/2012"
        android:inputType="date"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="308dp"
        android:layout_height="91dp"
        android:layout_below="@+id/editTextDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"


        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/two_sided_border"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:text="Escoge localizaciÃ³n en el mapa"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTextPersonName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="109dp"
        android:background="@drawable/two_sided_border"
        android:ellipsize="start"
        android:ems="10"
        android:gravity="center_horizontal"

        android:hint="12:12"
        android:inputType="time"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/two_sided_border2"
        android:text="Button"
        android:textColor="@android:color/white" />
</RelativeLayout>